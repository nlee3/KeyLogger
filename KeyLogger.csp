.EQU KEYBOARD_STATUS, $000
.EQU KEYBOARD_DATA, $001

LDX# 0
POLL_KEYBD: 
	INB KEYBOARD_STATUS ;port to accumulator, checks if port $000 has a one bit set
	JGE POLL_KEYBD ;
	INB KEYBOARD_DATA
	JMP TRANSFER

TRANSFER:
	ADX# 1
	STA+ $D00
	JMP POLL_KEYBD



